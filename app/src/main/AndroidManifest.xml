<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devops.collectomania">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/collectomanialogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/collectomanialogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Collectomania">
        <activity
            android:name="com.devops.collectomania.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.devops.collectomania.UserDetails"
            android:exported="false" />
        <activity
            android:name="com.devops.collectomania.MainMenu"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Collectomania.NoActionBar" />
        <activity
            android:name="com.devops.collectomania.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>